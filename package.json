{
  "name": "OscGoesBrrr",
  "version": "1.0.0",
  "description": "Haptics for VRChat",
  "main": "app/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "(cd src/main && webpack) && (cd src/frontend && webpack)",
    "watchFrontend": "cd src/main/frontend && webpack --watch",
    "watchMain": "cd src/main/main && webpack --watch"
  },
  "repository": "https://gitlab.com/VRCFury/OscGoesBrrr",
  "license": "CC BY-NC-SA 4.0",
  "devDependencies": {
    "electron": "^23.2.0",
    "electron-builder": "^24.1.1",
    "promisify-child-process": "^4.1.1",
    "semver": "^7.3.8",
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "classnames": "^2.3.1",
    "css-loader": "^6.7.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "sass": "^1.54.0",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "@types/node": "^16.11.47",
    "@types/semver": "^7.3.10",
    "@types/ws": "^8.5.3",
    "got": "^12.3.0",
    "osc": "^2.4.3",
    "typed-emitter": "^2.1.0",
    "ws": "^8.8.1",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "io-ts": "^2.2.20",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "overrides": {
    "lzma-native": "../_EXCLUDED_"
  },
  "build": {
    "productName": "OscGoesBrrr",
    "npmRebuild": false,
    "win": {
      "target": "nsis",
      "icon": "src/icons/ogb-logo.ico",
      "artifactName": "OscGoesBrrr-setup.exe"
    },
    "nsis": {
      "installerIcon": "src/icons/ogb-installer.ico"
    },
    "files": [
      "app/**/*"
    ]
  },
  "optionalDependencies": {
    "native-reg": "^1.1.1"
  }
}
